@model FinalProjectWeek9.ViewModels.AuthorViewModel

@{
    ViewData["Title"] = "Author Details";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="card mb-4">
        <div class="card-body">
            <!-- Author Details -->
            <h3>@Model.FirstName @Model.LastName</h3>
            <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</p>
        </div>
    </div>

    <!-- Back to Author List Button -->
    <a href="@Url.Action("List", "Author")" class="btn btn-primary">Back To List</a>
</div>
