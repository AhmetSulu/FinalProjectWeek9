@model FinalProjectWeek9.Models.Book

@{
    ViewData["Title"] = "Book Detail";
}

<div class="container mt-4">
    <h1 class="my-4">@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <!-- Display Author Information -->
            <p class="card-text"><strong>Author:</strong> @Model.Author</p>
            <!-- Display Genre Information -->
            <p class="card-text"><strong>Genre:</strong> @Model.Genre</p>
            <!-- Display Publish Date -->
            <p class="card-text"><strong>Publish Date:</strong> @Model.PublishDate.ToShortDateString()</p>
            <!-- Display ISBN Number -->
            <p class="card-text"><strong>ISBN:</strong> @Model.ISBN</p>
            <!-- Display Available Copies -->
            <p class="card-text"><strong>Copies Available:</strong> @Model.CopiesAvailable</p>
            <!-- Button to go back to the list of books -->
            <a class="btn btn-primary" href="@Url.Action("List", "Book")">Back to List</a>
        </div>
    </div>
</div>
